<script>
    function GetURLParameter(sParam)
    {
        let sPageURL = window.location.search.substring(1);
        let sURLVariables = sPageURL.split('&');
        for (let i = 0; i < sURLVariables.length; i++)
        {
            let sParameterName = sURLVariables[i].split('=');
            if (sParameterName[0] === sParam)
            {
                return sParameterName[1];
            }
        }
    }
    let name = GetURLParameter('name').replace("%20", " ");
    let number = GetURLParameter('number');
    window.onload = () => {
        document.getElementById('name').value = name;
        document.getElementById('number').value = number;
    }
</script>

<div class="add-form">
    <input type="text" id="name" class="form-input" placeholder="Name" pattern="^[a-zA-Z ,.'-]+$">
    <input type="text" id="number" class="form-input" placeholder="Telephone" pattern="^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}$">
</div>
<div class="form-submit">
    <button class="submit-button" onclick="Edit()">Update</button>
    <button class="submit-button" onclick="Delete()">Delete</button>
    {{#reject}}
    {{/reject}}
</div>